{
    "openapi": "3.0.1",
    "info": {
        "title": "OCR API",
        "description": "Swagger mô tả API OCR",
        "version": "v1"
    },
    "paths": {
        "/status": {
            "get": {
                "tags": [
                    "OCR"
                ],
                "operationId": "status",
                "requestBody": {},
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/StatusModel"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/recognize": {
            "post": {
                "tags": [
                    "OCR"
                ],
                "operationId": "recognize",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "file": {
                                        "type": "string",
                                        "format": "binary",
                                        "nullable": false
                                    }
                                }
                            },
                            "encoding": {
                                "file": {
                                    "style": "form"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResultModel"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ResultModel": {
                "type": "object",
                "properties": {
                    "result": {
                        "type": "string",
                        "nullable": false
                    }
                },
                "additionalProperties": false
            },
            "TessServerModel": {
                "type": "object",
                "properties": {
                    "version": {
                        "type": "string",
                        "nullable": false
                    },
                    "languages": {
                        "type": "array",
                        "nullable": false,
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "additionalProperties": false
            },
            "StatusModel": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "nullable": false
                    },
                    "tesseract": {
                        "$ref": "#/components/schemas/TessServerModel"
                    }
                }
            }
        },
        "securitySchemes": {
            "Bearer": {
                "type": "http",
                "description": "Xác thực tài khoản bằng JWT Bearer",
                "scheme": "Bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}